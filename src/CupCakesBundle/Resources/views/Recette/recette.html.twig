{% extends "@CupCakes/frontlayout.html.twig" %}

{% block fos_user_content %}

    <div class="row">
        <header class="s-title wow fadeInLeft">
            <h1>{{ recette.nom }}</h1>



        </header>
        <!--content-->
        <section class="content three-fourth">
    <div class="recipe">
        <div class="row">
            <!--two-third-->
            <article class="two-third wow fadeInLeft">
                <div class="image"><a href="#"><img src="{{ asset('uploads/images/' ~ recette.image) }}" alt="" /></a></div>
                <div class="intro"><p>{{ recette.description }}</p></div>
                <div class="instructions">
                    <ol>
                        {% for etape in etapes %}

                         <li>{{ etape.description }}</li>
                            {% endfor %}
                    </ol>
{{ form(form) }}
                </div>
            </article>
            <!--//two-third-->

            <!--one-third-->
            <article class="one-third wow fadeInDown">
                <dl class="basic">
                    <dt>Temps de préparation</dt>
                    <dd>{{ recette.tempspreparation }} mins</dd>
                    <dt>Temps de cuisson</dt>
                    <dd>{{ recette.tempscuisson }} mins</dd>
                    <dt>Difficulté</dt>
                    <dd>{{ recette.difficulte }}</dd>
                    <dt>Nombre de personnes</dt>
                    <dd>{{ recette.nbpersonnes }}</dd>
                </dl>

                <dl class="user">
                    <dt>Category</dt>
                    <dd>Deserts</dd>
                    <dt>Posted by</dt>
                    <dd>Jennifer W.</dd>
                </dl>

                <dl class="ingredients">
                    {% for ingredient in ingredients %}
                        <dt>{{ ingredient.quantite }}</dt>

                        <dd>{{ ingredient.nom }}</dd>
                    {% endfor %}

                </dl>


                <dl>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                        <a href="{{ path('recette_edit', { 'id': recette.id }) }}" >Modifier</a>
                        <a href="{{ path('recette_delete', { 'id': recette.id }) }}" >Supprimer</a>


                    {% endif %}
                </dl>
            </article>
            <!--//one-third-->
        </div>
    </div>
    <!--//recipe-->





    <!--//respond-->
    </section>
    <!--//content-->

    <!--right sidebar-->
    <aside class="sidebar one-fourth wow fadeInRight">
        <div class="widget nutrition">

            <h3>Nutrition facts <span>(per serving)</span></h3>
            <table>
                <tr>
                    <td>Calories </td>
                    <td>505</td>
                </tr>
                <tr>
                    <td>Protein</td>
                    <td>59g</td>
                </tr>
                <tr>
                    <td>Carbs</td>
                    <td>59g</td>
                </tr>
                <tr>
                    <td>Fat</td>
                    <td>29g</td>
                </tr>
                <tr>
                    <td>Saturates</td>
                    <td>17g</td>
                </tr>
                <tr>
                    <td>Fibre</td>
                    <td>2g</td>
                </tr>
                <tr>
                    <td>Sugar</td>
                    <td>44g</td>
                </tr>
                <tr>
                    <td>Salt</td>
                    <td>0.51g</td>
                </tr>
            </table>
        </div>




    </aside>
    </div>

{% endblock %}